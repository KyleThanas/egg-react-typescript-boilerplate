{
  "extends": "../../config/tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es5",
    "module": "esnext",
    "sourceMap": true,
    "lib": ["es6", "dom", "es2017", "esnext"],
    "baseUrl": "./",
    "paths": {
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"],
      "@settings/*": ["settings/*"],
      "@asset/*": ["asset/*"],
      "@component/*": ["component/*"],
      "@framework/*": ["framework/*"]
    },
    "allowJs": true,
    "resolveJsonModule": true
  },
  "files": ["./typings/global.d.ts"],
  "include": ["./page/**/**.tsx", "page/antd/store/config.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.json"]
}
